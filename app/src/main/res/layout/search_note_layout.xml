<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable name="title" type="java.lang.String"/>
    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/rowLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/rows_gap_margin"
        android:elevation="4dp"
        android:clickable="true"
        android:focusable="true">

        <TextView
            android:id="@+id/titleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/note_row_width_padding"
            android:paddingEnd="@dimen/note_row_width_padding"
            android:paddingTop="@dimen/search.note_row_height_padding"
            android:paddingBottom="@dimen/search.note_row_height_padding"
            android:text="@{title}"
            android:textStyle="bold"
            android:textSize="@dimen/note_title"
            android:layout_marginEnd="@dimen/note_row_icon_margin"
            tools:text="Note Title"
            />
    </androidx.cardview.widget.CardView>
</layout>
