<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/biometricFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.securenotes.features.main.ui.MainFragment"
        android:label="Main"
        tools:layout="@layout/fragment_main">
        <action
            android:id="@+id/action_mainFragment_to_addNoteFragment"
            app:destination="@id/addNoteFragment" />
    </fragment>

    <fragment
        android:id="@+id/addNoteFragment"
        android:name="com.example.securenotes.features.addnote.ui.AddNoteFragment"
        android:label="Add Note"
        tools:layout="@layout/fragment_add_note" />

    <fragment
        android:id="@+id/biometricFragment"
        android:name="com.example.securenotes.features.biometric.ui.BiometricFragment"
        android:label="Biometric"
        tools:layout="@layout/fragment_biometric">
        <action
            android:id="@+id/action_biometricFragment_to_mainFragment"
            app:destination="@id/mainFragment"
            app:popUpTo="@id/biometricFragment"
            app:popUpToInclusive="true"/>
    </fragment>
</navigation>
